<TextInput>:
    size_hint: 0.5, 0.2
    multiline: True
    font_size: 60

<Button>:
    font_size: 60
    size_hint: 0.5, 0.10

<Label>:
    font_size: 60

<CheckBox>:
    canvas.before:
        Color:
            rgb: self.color
        Rectangle:
            source: self._radio_image if self.group else self._checkbox_image
            size: sp(96), sp(64)
            pos: int(self.center_x - sp(48)), int(self.center_y - sp(32))

<LoginWindow>:
    name: 'login'

    username: username
    passord: passord

    FloatLayout:

        TextInput:
            pos_hint:{"x":0.1, "top": 0.85}
            size_hint: 0.8, 0.2
            id: username
            hint_text: 'Brukernavn'

        TextInput:
            pos_hint:{"x":0.1, "top": 0.5}
            size_hint: 0.8, 0.2
            id: passord
            password: True
            hint_text: 'Passord'

        Button:
            pos_hint:{"x":0.5, "top": 0.15}
            text: "Logg inn"
            on_release:
                root.manager.transition.direction = "left"
                root.loginBtn()

        Button:
            pos_hint:{"x":0, "top": 0.15}
            text: "Registrer"
            on_release:
                root.manager.transition.direction = "left"
                root.registrerBtn()

